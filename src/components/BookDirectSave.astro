<style>
  /* Direct Booking Section */
  .direct-booking {
    padding: 80px 0;
    background: linear-gradient(135deg, rgba(46, 139, 139, 0.05), rgba(32, 178, 170, 0.1));
  }

  .direct-booking h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #2c3e50;
  }

  .booking-comparison {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 40px;
    align-items: center;
    margin: 50px 0;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .booking-card {
    background: white;
    padding: 40px 30px;
    border-radius: 20px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .booking-card:hover {
    transform: translateY(-5px);
  }

  .booking-card h3 {
    font-size: 1.4rem;
    margin-bottom: 25px;
    color: #2c3e50;
  }

  .price-display {
    margin-bottom: 30px;
  }

  .price-amount {
    display: block;
    font-size: 3rem;
    font-weight: 800;
    color: #2c3e50;
    line-height: 1;
  }

  .price-period {
    font-size: 1.1rem;
    color: #666;
    font-weight: 600;
  }

  .price-display.featured .price-amount {
    color: #2e8b8b;
  }

  .booking-details {
    text-align: left;
    margin-bottom: 20px;
  }

  .detail-line {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
    font-size: 1rem;
  }

  .detail-line:last-child {
    border-bottom: none;
  }

  .detail-line.highlight {
    color: #27ae60;
    font-weight: 600;
  }

  .platform-booking {
    border: 2px solid #e0e0e0;
  }

  .direct-booking-card {
    border: 3px solid #2e8b8b;
    background: linear-gradient(135deg, rgba(46, 139, 139, 0.05), rgba(32, 178, 170, 0.05));
    position: relative;
  }

  .direct-booking-card::before {
    content: "BEST VALUE";
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: #2e8b8b;
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 700;
  }

  .vs-divider {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }

  .vs-text {
    font-size: 2rem;
    font-weight: 800;
    color: #2e8b8b;
    background: linear-gradient(135deg, #2e8b8b, #20b2aa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .savings-badge {
    background: linear-gradient(135deg, #27ae60, #2ecc71);
    color: white;
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 700;
    font-size: 1rem;
    box-shadow: 0 5px 15px rgba(39, 174, 96, 0.3);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  .direct-booking-benefits {
    margin: 60px 0;
  }

  .direct-booking-benefits h3 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 40px;
    color: #2c3e50;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
  }

  .benefit-card {
    background: white;
    padding: 30px 20px;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-5px);
  }

  .benefit-card .benefit-icon {
    font-size: 3rem;
    margin-bottom: 20px;
    display: block;
  }

  .benefit-card h4 {
    font-size: 1.3rem;
    margin-bottom: 15px;
    color: #2c3e50;
  }

  .benefit-card p {
    color: #666;
    line-height: 1.6;
  }

  .booking-cta {
    text-align: center;
    margin-top: 50px;
  }

  .btn-large {
    padding: 20px 40px;
    font-size: 1.3rem;
    margin-bottom: 20px;
  }

  .booking-note {
    color: #666;
    font-size: 0.9rem;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .booking-comparison {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .vs-divider {
      flex-direction: row;
      justify-content: center;
    }

    .vs-text {
      transform: rotate(90deg);
    }
  }

  @media (max-width: 768px) {
    .direct-booking {
      padding: 60px 0;
    }

    .booking-card {
      padding: 30px 20px;
    }

    .price-amount {
      font-size: 2.5rem;
    }

    .benefits-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .direct-booking h2 {
      font-size: 2rem;
    }

    .booking-card h3 {
      font-size: 1.2rem;
    }

    .price-amount {
      font-size: 2rem;
    }

    .benefit-card {
      padding: 20px 15px;
    }
  }
</style> 