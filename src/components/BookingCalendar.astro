    {!isModal && (
      <>
        <h2>Check Availability & Book</h2>
        <p>Weekly rentals Saturday to Saturday ‚Ä¢ Select your preferred week</p>
      </>
    )}
    {isModal && <h3>Quick Booking</h3>}
  </div>

  <div class="booking-form">
    <!-- Guest Selection -->
    <div class="guest-selector">
      <h4>üë• Guests (Max 8)</h4>
      <div class="guest-controls">
        <div class="guest-type">
          <span>Adults</span>
          <div class="counter">
            <button class="guest-btn" data-type="adults" data-action="decrease" disabled>-</button>
            <span class="guest-count" data-type="adults">2</span>
            <button class="guest-btn" data-type="adults" data-action="increase">+</button>
