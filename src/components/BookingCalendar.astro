  }

  /* Guest Selector */
  .guest-selector h4 {
    color: #2c3e50;
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .guest-controls {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .guest-type {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background: #f8f9fa;
    border-radius: 10px;
  }

  .guest-type span {
    font-weight: 600;
    color: #2c3e50;
  }

  .counter {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .counter button {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    border: 2px solid #2e8b8b;
    background: white;
    color: #2e8b8b;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .counter button:hover:not(:disabled) {
    background: #2e8b8b;
    color: white;
  }

  .counter button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .counter span {
    font-weight: 700;
    color: #2c3e50;
    min-width: 20px;
    text-align: center;
  }

  .guest-note {
    margin-top: 10px;
    color: #666;
    font-size: 0.9rem;
    text-align: center;
  }

  /* Year Selector */
  .year-selector h4 {
    color: #2c3e50;
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .year-select {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 10px;
    font-size: 1rem;
    background: white;
    color: #2c3e50;
    cursor: pointer;
  }

  .year-select:focus {
    outline: none;
    border-color: #2e8b8b;
  }

  /* Week Selector */
  .week-selector h4 {
    color: #2c3e50;
    margin-bottom: 20px;
    font-size: 1.2rem;
  }

  .months-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
  }

  .month-section h5 {
    color: #2e8b8b;
    font-size: 1.1rem;
    margin-bottom: 15px;
    text-align: center;
    text-transform: capitalize;
    font-weight: 700;
  }

  .weeks-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .week-option {
    padding: 15px;
    border: 2px solid #e0e0e0;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    background: white;
  }

  .week-option:hover {
    border-color: #2e8b8b;
