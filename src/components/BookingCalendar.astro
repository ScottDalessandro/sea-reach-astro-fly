</div>

<script>
  // Declare window interface extensions
  declare global {
    interface Window {
      showBookingModal: () => void;
      hideBookingModal: () => void;
    }
  }

  // Booking Calendar JavaScript
  class BookingCalendar {
    private guests: { adults: number; children: number };
    private selectedWeek: string | null;
    private selectedPrice: number;
    private maxGuests: number;
    
    constructor() {
      this.guests = { adults: 2, children: 0 };
      this.selectedWeek = null;
      this.selectedPrice = 0;
      this.maxGuests = 8;
      
      this.init();
    }

    init() {
      this.setupGuestControls();
      this.setupWeekSelection();
      this.setupBookNowButton();
    }

    setupGuestControls() {
      const guestButtons = document.querySelectorAll<HTMLButtonElement>('.guest-btn');
      const totalGuestsSpan = document.getElementById('total-guests');

      guestButtons.forEach(button => {
        button.addEventListener('click', () => {
          const type = button.dataset.type as keyof typeof this.guests;
          const action = button.dataset.action;
          const countSpan = document.querySelector<HTMLElement>(`.guest-count[data-type="${type}"]`);
          if (!countSpan) return;
          
          const currentCount = parseInt(countSpan.textContent || '0');
          
          if (action === 'increase' && this.getTotalGuests() < this.maxGuests) {
            countSpan.textContent = (currentCount + 1).toString();
            this.guests[type]++;
          } else if (action === 'decrease' && currentCount > 0) {
            countSpan.textContent = (currentCount - 1).toString();
            this.guests[type]--;
          }
          
          this.updateGuestButtons();
          if (totalGuestsSpan) {
            totalGuestsSpan.textContent = this.getTotalGuests().toString();
          }
        });
      });
    }

    setupWeekSelection() {
      const weekOptions = document.querySelectorAll<HTMLElement>('.week-option');
      const bookNowBtn = document.getElementById('book-now-btn');
      const bookingSummary = document.getElementById('booking-summary');
      
      weekOptions.forEach(option => {
        option.addEventListener('click', () => {
          if (option.dataset.available === 'false') return;
          
          // Remove selected class from all options
          weekOptions.forEach(opt => opt.classList.remove('selected'));
          
          // Add selected class to clicked option
          option.classList.add('selected');
          
          // Update selected week and price
          this.selectedWeek = option.dataset.week || null;
          this.selectedPrice = parseInt(option.dataset.price || '0');
          
          // Update booking summary
          this.updateBookingSummary();
          
          // Show booking summary and enable book now button
          if (bookingSummary) {
            bookingSummary.style.display = 'block';
          }
          if (bookNowBtn) {
            (bookNowBtn as HTMLButtonElement).disabled = false;
            bookNowBtn.textContent = 'Continue to Booking Form';
          }
        });
      });
    }

    setupBookNowButton() {
      const bookNowBtn = document.getElementById('book-now-btn');
      if (bookNowBtn) {
        bookNowBtn.addEventListener('click', () => {
          if (!this.selectedWeek) return;
          
          // Create and show the booking form
          const bookingForm = document.createElement('div');
          bookingForm.id = 'booking-form-container';
          
          // Create a new BookingForm component
          const form = document.createElement('form');
          form.innerHTML = `
            <div class="booking-form-container">
              <form id="booking-form" class="booking-form">
                <div class="form-group">
                  <label for="name">Full Name</label>
                  <input type="text" id="name" name="name" required placeholder="John Smith">
                </div>

                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" required placeholder="john@example.com">
                </div>

                <div class="form-group">
                  <label for="phone">Phone</label>
                  <input type="tel" id="phone" name="phone" required placeholder="(555) 555-5555">
                </div>

                <div class="form-group">
                  <label for="message">Message (Optional)</label>
                  <textarea id="message" name="message" rows="4" placeholder="Any special requests or questions?"></textarea>
                </div>

                <div class="booking-details">
                  <h4>Booking Details</h4>
                  <div class="detail-row">
                    <span>Selected Week:</span>
                    <span>${this.selectedWeek}</span>
                  </div>
                  <div class="detail-row">
                    <span>Number of Guests:</span>
                    <span>${this.getTotalGuests()}</span>
                  </div>
                  <div class="detail-row">
                    <span>Rate:</span>
                    <span>$${this.selectedPrice}</span>
                  </div>
                </div>

                <button type="submit" class="submit-btn">Send Booking Request</button>
              </form>
            </div>
          `;
          
          // Add form submission handler
          form.addEventListener('submit', (e) => {
            e.preventDefault();
            const formData = new FormData(e.target as HTMLFormElement);
            const data = Object.fromEntries(formData.entries());
            
            // Create email link
            const mailtoLink = `mailto:info@searench.com?subject=Booking Request for ${this.selectedWeek}&body=Name: ${data.name}%0D%0AEmail: ${data.email}%0D%0APhone: ${data.phone}%0D%0AMessage: ${data.message}%0D%0A%0D%0ABooking Details:%0D%0AWeek: ${this.selectedWeek}%0D%0AGuests: ${this.getTotalGuests()}%0D%0ARate: $${this.selectedPrice}`;
            window.location.href = mailtoLink;
          });
          
          // Replace the calendar with the form
          const calendar = document.getElementById('booking-calendar');
          if (calendar) {
            calendar.innerHTML = '';
            calendar.appendChild(form);
          }
        });
      }
    }

    updateGuestButtons() {
      const totalGuests = this.getTotalGuests();
      const decreaseButtons = document.querySelectorAll<HTMLButtonElement>('.guest-btn[data-action="decrease"]');
      const increaseButtons = document.querySelectorAll<HTMLButtonElement>('.guest-btn[data-action="increase"]');
      
      decreaseButtons.forEach(button => {
        const type = button.dataset.type as keyof typeof this.guests;
        const count = this.guests[type];
        button.disabled = count <= 0;
      });
      
      increaseButtons.forEach(button => {
        button.disabled = totalGuests >= this.maxGuests;
      });
    }

    updateBookingSummary() {
      const summaryWeek = document.getElementById('summary-week');
      const summaryGuests = document.getElementById('summary-guests');
      const summaryPlatformRate = document.getElementById('summary-platform-rate');
      const summaryDirectRate = document.getElementById('summary-direct-rate');
      const summarySavings = document.getElementById('summary-savings');
      
      if (summaryWeek) summaryWeek.textContent = this.selectedWeek || '';
      if (summaryGuests) summaryGuests.textContent = this.getTotalGuests().toString();
      
      const platformRate = Math.round(this.selectedPrice * 1.17); // 17% higher
      if (summaryPlatformRate) summaryPlatformRate.textContent = `$${platformRate}`;
      if (summaryDirectRate) summaryDirectRate.textContent = `$${this.selectedPrice}`;
      if (summarySavings) summarySavings.textContent = `$${platformRate - this.selectedPrice}`;
    }

    getTotalGuests() {
      return this.guests.adults + this.guests.children;
    }
  }

  // Initialize the booking calendar
  document.addEventListener('DOMContentLoaded', () => {
    new BookingCalendar();
  });

  // Modal functionality
  window.showBookingModal = function() {
    const modal = document.getElementById('booking-modal');
    if (modal) {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
  };

  window.hideBookingModal = function() {
    const modal = document.getElementById('booking-modal');
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  };
</script>

<style>
  /* Booking Calendar Styles */
  .booking-calendar {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    max-width: 1000px;
    margin: 0 auto;
  }

  .modal-calendar {
    padding: 30px;
    max-width: 800px;
  }

  .booking-calendar h2 {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 10px;
  }

  .booking-calendar h3 {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 20px;
  }

  .booking-calendar p {
    text-align: center;
    color: #666;
    margin-bottom: 30px;
  }

  .booking-form {
    display: grid;
    gap: 30px;
  }

  /* Guest Selector */
  .guest-selector h4 {
    color: #2c3e50;
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .guest-controls {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .guest-type {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    background: #f8f9fa;
    border-radius: 10px;
  }

  .guest-type span {
    font-weight: 600;
    color: #2c3e50;
  }

  .counter {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .counter button {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    border: 2px solid #2e8b8b;
    background: white;
    color: #2e8b8b;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .counter button:hover:not(:disabled) {
    background: #2e8b8b;
    color: white;
  }

  .counter button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .counter span {
    font-weight: 700;
    color: #2c3e50;
    min-width: 20px;
    text-align: center;
  }

  .guest-note {
    margin-top: 10px;
    color: #666;
    font-size: 0.9rem;
    text-align: center;
  }

  /* Year Selector */
  .year-selector h4 {
    color: #2c3e50;
    margin-bottom: 15px;
    font-size: 1.2rem;
  }

  .year-select {
    width: 100%;
    padding: 15px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 10px;
    font-size: 1rem;
    background: white;
    color: #2c3e50;
    cursor: pointer;
  }

  .year-select:focus {
    outline: none;
    border-color: #2e8b8b;
  }

  /* Week Selector */
  .week-selector h4 {
    color: #2c3e50;
    margin-bottom: 20px;
    font-size: 1.2rem;
  }

  .months-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
  }

  .month-section h5 {
    color: #2e8b8b;
    font-size: 1.1rem;
    margin-bottom: 15px;
    text-align: center;
    text-transform: capitalize;
    font-weight: 700;
  }

  .weeks-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .week-option {
    padding: 15px;
    border: 2px solid #e0e0e0;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    background: white;
  }

  .week-option:hover {
    border-color: #2e8b8b;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

