      </em>
    </p>
  </div>
</div>

<script>
  // Booking Calendar JavaScript
  class BookingCalendar {
    constructor() {
      this.guests = { adults: 2, children: 0 };
      this.selectedWeek = null;
      this.selectedPrice = 0;
      this.maxGuests = 8;
      
      this.init();
    }

    init() {
      this.setupGuestControls();
      this.setupWeekSelection();
      this.setupBookingButton();
      this.updateGuestDisplay();
    }

    setupGuestControls() {
      const guestButtons = document.querySelectorAll('.guest-btn');
      guestButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const type = e.target.dataset.type;
          const action = e.target.dataset.action;
          this.handleGuestChange(type, action === 'increase');
        });
      });
    }

    setupWeekSelection() {
      const weekOptions = document.querySelectorAll('.week-option');
      weekOptions.forEach(option => {
        option.addEventListener('click', (e) => {
          const available = e.currentTarget.dataset.available === 'true';
          if (!available) return;

          // Remove previous selection
          document.querySelectorAll('.week-option.selected').forEach(el => {
            el.classList.remove('selected');
          });

          // Add selection to clicked week
          e.currentTarget.classList.add('selected');
          
          this.selectedWeek = e.currentTarget.dataset.week;
          this.selectedPrice = parseInt(e.currentTarget.dataset.price);
          
          this.updateBookingSummary();
          this.updateBookingButton();
        });
      });
    }

    setupBookingButton() {
      const bookButton = document.getElementById('book-now-btn');
      bookButton.addEventListener('click', () => {
        this.handleBooking();
      });
    }

    handleGuestChange(type, increment) {
      const newValue = increment ? this.guests[type] + 1 : Math.max(0, this.guests[type] - 1);
      const newTotal = type === 'adults' ? newValue + this.guests.children : this.guests.adults + newValue;

      if (newTotal <= this.maxGuests && (type === 'adults' ? newValue >= 1 : true)) {
        this.guests[type] = newValue;
        this.updateGuestDisplay();
        this.updateBookingSummary();
      }
    }

    updateGuestDisplay() {
      // Update guest counts
      document.querySelector(`[data-type="adults"].guest-count`).textContent = this.guests.adults;
      document.querySelector(`[data-type="children"].guest-count`).textContent = this.guests.children;
      
      // Update total
      const total = this.guests.adults + this.guests.children;
      document.getElementById('total-guests').textContent = total;

      // Update button states
      const totalGuests = this.guests.adults + this.guests.children;
      
      // Adults buttons
      const adultsDecrease = document.querySelector('[data-type="adults"][data-action="decrease"]');
      const adultsIncrease = document.querySelector('[data-type="adults"][data-action="increase"]');
      adultsDecrease.disabled = this.guests.adults <= 1;
      adultsIncrease.disabled = totalGuests >= this.maxGuests;

      // Children buttons
      const childrenDecrease = document.querySelector('[data-type="children"][data-action="decrease"]');
      const childrenIncrease = document.querySelector('[data-type="children"][data-action="increase"]');
      childrenDecrease.disabled = this.guests.children <= 0;
      childrenIncrease.disabled = totalGuests >= this.maxGuests;
    }

    updateBookingSummary() {
      const summaryDiv = document.getElementById('booking-summary');
      
      if (!this.selectedWeek) {
        summaryDiv.style.display = 'none';
        return;
      }

      summaryDiv.style.display = 'block';
      
      const directRate = Math.round(this.selectedPrice * 0.83);
      const savings = Math.round(this.selectedPrice * 0.17);
      
      document.getElementById('summary-week').textContent = this.selectedWeek;
      document.getElementById('summary-guests').textContent = 
        `${this.guests.adults} adults${this.guests.children > 0 ? `, ${this.guests.children} children` : ''}`;
      document.getElementById('summary-platform-rate').textContent = `$${this.selectedPrice.toLocaleString()}`;
      document.getElementById('summary-direct-rate').textContent = `$${directRate.toLocaleString()}`;
      document.getElementById('summary-savings').textContent = `$${savings.toLocaleString()} (17%)`;
    }

    updateBookingButton() {
      const button = document.getElementById('book-now-btn');
      
      if (this.selectedWeek) {
        button.disabled = false;
        button.textContent = 'üìß Send Booking Request';
      } else {
        button.disabled = true;
        button.textContent = 'Select a Week to Book';
      }
    }

    handleBooking() {
      if (!this.selectedWeek) {
        alert('Please select a week first!');
        return;
      }

      const directRate = Math.round(this.selectedPrice * 0.83);
      const savings = Math.round(this.selectedPrice * 0.17);
      
      const bookingDetails = {
        week: this.selectedWeek,
        guests: `${this.guests.adults} adults${this.guests.children > 0 ? `, ${this.guests.children} children` : ''}`,
        total: directRate,
        savings: savings
      };

      const emailSubject = `Sea Reach Booking Inquiry - ${bookingDetails.week}`;
      const emailBody = `Hi! I'd like to book Sea Reach for:

Week: ${bookingDetails.week}
Guests: ${bookingDetails.guests}
Total: $${bookingDetails.total.toLocaleString()}

I understand I save $${bookingDetails.savings.toLocaleString()} by booking direct!

Please let me know the next steps.

Thank you!`;

      window.location.href = `mailto:info@searench.com?subject=${encodeURIComponent(emailSubject)}&body=${encodeURIComponent(emailBody)}`;
    }
  }

  // Initialize booking calendar when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new BookingCalendar();
  });

  // Modal functionality
  window.showBookingModal = function() {
    const modal = document.getElementById('booking-modal');
    if (modal) {
      modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
    }
  };

  window.hideBookingModal = function() {
    const modal = document.getElementById('booking-modal');
    if (modal) {
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  };
</script>

<style>
  /* Booking Calendar Styles */
  .booking-calendar {
    background: white;
    border-radius: 20px;
    padding: 40px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    max-width: 1000px;
    margin: 0 auto;
  }

  .modal-calendar {
    padding: 30px;
    max-width: 800px;
  }

  .booking-calendar h2 {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 10px;
  }

  .booking-calendar h3 {
